    "# 梯形下底10公分\n",
    "# 梯形高2公分\n",
    "\n",
    "top = float(input(\"輸入上底(公分)\"))\n",
    "bottom = float(input(\"輸入下底(公分)\"))\n",
    "tall = float(input(\"輸入高(公分)\"))\n",
    "\n",
    "menseki = (top + bottom) * tall / 2\n",
    "print(\"梯形面積為:\",round(menseki,ndigits = 2))"
